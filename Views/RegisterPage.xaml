<Page x:Class="InvestingManagerApp.Views.RegisterPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="RegisterPage">

    <Grid>
        <StackPanel Width="250"
                    Orientation="Vertical"
                    Margin="20">
            <TextBlock Text="Регистрация"
                       FontFamily="Montserrat"
                       FontSize="24"
                       FontWeight="ExtraBlack"
                       HorizontalAlignment="Center"/>

            <TextBlock Text="Фамилия Имя"
                       FontSize="12"
                       FontFamily="Montserrat"
                       FontWeight="Bold"
                       Margin="12, 16, 12, 4"/>
            <TextBox Text="{Binding UserName, UpdateSourceTrigger=PropertyChanged}"
                     FontFamily="Montserrat"
                     FontWeight="Medium"
                     Height="24"
                     FontSize="12"/>

            <TextBlock Text="Логин"
                       FontSize="12"
                       FontFamily="Montserrat"
                       FontWeight="Bold"
                       Margin="12, 8, 12, 4"/>
            <TextBox Text="{Binding Login, UpdateSourceTrigger=PropertyChanged}"
                     FontFamily="Montserrat"
                     FontWeight="Medium"
                     Height="24"
                     FontSize="12"/>

            <TextBlock Text="Пароль"
                       FontSize="12"
                       FontFamily="Montserrat"
                       FontWeight="Bold"
                       Margin="12, 12, 12, 4"/>
            <TextBox Text="{Binding Password, UpdateSourceTrigger=PropertyChanged}"
                         FontFamily="Montserrat"
                         FontWeight="Medium"
                         Height="24"
                         FontSize="12"
                         Margin="10, 8, 10, 8"/>

            <TextBlock Text="Подтверждение пароля"
                       FontSize="12"
                       FontFamily="Montserrat"
                       FontWeight="Bold"
                       Margin="12, 4, 12, 4"/>
            <TextBox Text="{Binding ConfirmingPassword, UpdateSourceTrigger=PropertyChanged}"
                         FontFamily="Montserrat"
                         FontWeight="Medium"
                         Height="24"
                         FontSize="12"
                         Margin="10, 8, 10, 8"/>

            <TextBlock Text="{Binding ErrorMessage}"
                       Foreground="#D7596D"
                       FontSize="8"
                       FontWeight="Medium"
                       Margin="12, 0, 12, 0"
                       TextWrapping="Wrap"/>

            <Button Content="Зарегистрироваться"
                    Command="{Binding RegisterCommand}"
                    Foreground="White"
                    Background="#532267"
                    BorderThickness="0"
                    FontFamily="Montserrat"
                    FontWeight="Medium"
                    FontSize="10"
                    Width="140"
                    Height="32"
                    Cursor="Hand"
                    Margin="12,8,12,8"/>

            <Button Content="Назад ко входу"
                    Command="{Binding NavigateToLoginCommand}"
                    Foreground="#532267"
                    Background="White"
                    BorderThickness="0"
                    FontFamily="Montserrat"
                    FontSize="10"
                    FontWeight="Medium"
                    Width="120"
                    Cursor="Hand"/>
        </StackPanel>
    </Grid>
</Page>

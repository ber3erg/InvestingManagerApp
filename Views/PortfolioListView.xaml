<Window x:Class="InvestingManagerApp.Views.PortfolioListView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Список портфелей" Height="500" Width="850">

    <DockPanel>
        <!-- Меню -->
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="Навигация">
                <MenuItem Header="Портфели" IsEnabled="False"/>
                <MenuItem Header="История транзакций" Click="NavigateToTransactionHistory_Click"/>
            </MenuItem>
        </Menu>

        <!-- Основное содержимое -->
        <Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <TextBlock Text="Ваши портфели" 
                       FontSize="20" 
                       FontWeight="Bold" 
                       HorizontalAlignment="Center"
                       Margin="0,0,0,10"/>

            <DataGrid Grid.Row="1" 
                      ItemsSource="{Binding Portfolios}" 
                      AutoGenerateColumns="False" 
                      IsReadOnly="True"
                      Margin="0,10,0,10"
                      x:Name="DataGrid">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="Auto"/>
                    <DataGridTextColumn Header="Название" Binding="{Binding Name}" Width="*"/>
                    <DataGridTextColumn Header="Общая стоимость" Binding="{Binding TotalValue}" Width="Auto"/>
                    <DataGridTextColumn Header="Дата создания" Binding="{Binding CreatedDate, StringFormat=\{0:dd.MM.yyyy\}}" Width="Auto"/>
                </DataGrid.Columns>
            </DataGrid>

            <Button Grid.Row="2" Content="Редактировать портфель" 
                    Width="150" Height="30" 
                    HorizontalAlignment="Left"
                    Click="EditPortfolioButton_Click"/>

            <Button Grid.Row="2" Content="Назад" 
                    Width="100" Height="30" 
                    HorizontalAlignment="Right"
                    Click="BackButton_Click"/>
        </Grid>
    </DockPanel>
</Window>
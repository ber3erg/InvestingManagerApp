<Window x:Class="InvestingManagerApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModels="clr-namespace:InvestingManagerApp.ViewModels"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="850">
    <Window.DataContext>
        <viewModels:MainViewModel />
    </Window.DataContext>

    <Frame Content="{Binding CurrentPage}" NavigationUIVisibility="Hidden"/>
</Window>
